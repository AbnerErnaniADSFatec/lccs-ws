{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "class_systems_response.json#",
  "title": "Classification Systems",
  "version": "0.6",
  "description": "Land Cover Classification System Web Service (LCCS-WS) is designed to deal with class system representations in traditional land use and cover maps. Besides that it can make easy for applications to have access to the symbology of well know land use and cover maps in applications such as QGIS or GeoServer.\n\nThere are free and open source implementations based on this specification:\n- [lccs-ws](https://github.com/brazil-data-cube/lccs-ws): is a LCCS web server implemented in Python.\n- [lccs.py](https://github.com/brazil-data-cube/lccs.py): is a client library for Python.\n- [wlts](https://github.com/brazil-data-cube/wlts): is a Land Use and Cover Trajectory web service implemented in Python.\n- [wlts.py](https://github.com/brazil-data-cube/wlts.py): is a client library for Python programmers that makes easy the access to trajectories from land use and cover maps.\n",
  "type": "array",
  "items": {
    "$ref": "#/definitions/ClassificationSystemMetadataType"
  },
  "definitions": {
    "ExceptionType": {
      "title": "Exception raised by the service",
      "description": "Information about the exception: an error code plus an optional description.",
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "code"
      ]
    },
    "DeleteType": {
      "title": "Delete message",
      "description": "The delete request was successful.",
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      },
      "required": [
        "message"
      ]
    },
    "RootType": {
      "title": "The landing page provides links to the API definition. Links to the classification systems endpoint.",
      "description": "Provides link to the classification system.",
      "type": "object",
      "properties": {
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LinkType"
          }
        }
      },
      "required": [
        "links"
      ]
    },
    "LinkType": {
      "title": "Link for related information.",
      "description": "This is a generic way to link information in the service.",
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "format": "url",
          "example": "http://www.esensing.dpi.inpe.br/lccs/classification_systems/system_id/classes"
        },
        "rel": {
          "type": "string",
          "example": "child"
        },
        "title": {
          "type": "string",
          "example": "Child"
        }
      },
      "required": [
        "href",
        "rel"
      ]
    },
    "ClassificationSystemsType": {
      "title": "A document with the list of land use and and cover classification systems",
      "description": "The id of a classification system is unique and it can be used in successive queries in the system. type: array items: $ref: "
    },
    "ClassificationSystemType": {
      "title": "Land Use and Cover Classification System",
      "description": "This type represents a given land use and cover classification system.",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "authority_name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "description",
        "authority_name",
        "version"
      ]
    },
    "ClassificationSystemMetadataType": {
      "allOf": [
        {
          "$ref": "#/definitions/ClassificationSystemType"
        },
        {
          "type": "object",
          "properties": {
            "links": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/LinkType"
              },
              "example": [
                {
                  "href": "http://www.esensing.dpi.inpe.br/lccs/classification_systems/system_id",
                  "rel": "self"
                },
                {
                  "href": "http://www.esensing.dpi.inpe.br/lccs/classification_systems/system_id/classes",
                  "rel": "classes"
                },
                {
                  "href": "http://www.esensing.dpi.inpe.br/lccs/classification_systems",
                  "rel": "parent"
                },
                {
                  "href": "http://www.esensing.dpi.inpe.br/lccs/",
                  "rel": "root"
                }
              ]
            }
          },
          "required": [
            "links"
          ]
        }
      ]
    },
    "ClassesLinkType": {
      "title": "Land Use and Cover Classes",
      "description": "Array of land use and cover classes.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/LinkType"
      }
    },
    "ClassType": {
      "title": "Land Use and Cover Class",
      "description": "Land Use and Cover Class.",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "class_parent_id": {
          "type": "integer"
        }
      },
      "required": [
        "name",
        "code",
        "description"
      ]
    },
    "ClassesType": {
      "type": "object",
      "properties": {
        "classes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ClassType"
          }
        }
      }
    },
    "ClassMetadataType": {
      "title": "Land Use and Cover Class",
      "description": "Describes a class from a classification system.",
      "allOf": [
        {
          "$ref": "#/definitions/ClassType"
        },
        {
          "type": "object",
          "properties": {
            "links": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/LinkType"
              }
            }
          }
        }
      ],
      "required": [
        "links"
      ]
    },
    "MappingType": {
      "type": "object",
      "properties": {
        "degree_of_similarity": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "source_id": {
          "type": "number"
        },
        "target_id": {
          "type": "number"
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LinkType"
          }
        }
      }
    },
    "MappingsType": {
      "title": "A document with the list of mappinngs",
      "description": "List of mappings.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/MappingType"
      }
    },
    "StyleLinksType": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/LinkType"
      }
    },
    "ClassSystemLinksType": {
      "type": "object",
      "properties": {
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LinkType"
          }
        }
      },
      "required": [
        "links"
      ]
    },
    "StyleLinkType": {
      "$ref": "#/definitions/LinkType"
    },
    "StyleFileType": {
      "type": "object",
      "properties": {
        "style": {
          "type": "string",
          "format": "binary"
        }
      },
      "required": [
        "style"
      ]
    },
    "StyleFormatType": {
      "title": "Style Formats",
      "description": "This type represents a given style format.",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LinkType"
          }
        }
      },
      "required": [
        "name"
      ]
    },
    "StyleFormatsType": {
      "title": "A document with the list of land use and and cover classification systems",
      "description": "The name of a classification system is unique and it can be used in successive queries in the system.\n",
      "type": "array",
      "items": {
        "$ref": "#/definitions/StyleFormatType"
      }
    }
  }
}